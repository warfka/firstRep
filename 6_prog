#include<iostream>
#include<ctype.h>
#include<string.h>
#include<conio.h>
#include <cstdlib>
//#include<vcl.h>
#pragma hdrstop
//#pragma argsused
using namespace std;
//char* rus(const char* text);
int compare(const void* price1, const void* price2);

const int k = 30;
struct PRICE
{

	char goods[k];
	char magazin[k];
	double cost; 
};
int main()
{
	setlocale(LC_ALL, "Russian");
	int i, n;
	char magazin_name[k];
	bool not_found; 
	cout << " Введите количество структур PRICE: "; cin >> n;
	cout << "\n";

	PRICE * price = new PRICE[n];

	for (i = 0; i < n; i++)

	{
		cout << ' ' << (i + 1) << "Введите название товара: ";
		cin.ignore(); cin.getline(price[i].goods, k); //BBoA,
		cout << " Введите название магазина: ";
		cin.getline(price[i].magazin, k); //aHHbIx
		cout << " Введите цену товара: "; cin >> price[i].cost;
		cout << "\n";
	}
	qsort(price, n, sizeof(PRICE), compare); //BbI30B PYHKLUNN AA COPTUPOBKU.
	cout << " Записи упорядоченные в алфавитном порядке по названиям магазинов:\n\n";
		for (i = 0; i < n; i++)

		{ //BbI30B PYHKUMN ANA COpTMpOBKU

			cout << " Название товара: " << price[i].goods << endl;

			cout << " Название магазина: " << price[i].magazin << endl;

			cout << " Цена товара: " << price[i].cost << endl;

			cout << endl;

		}
	cin.ignore();
	cout << "\n Информация о товарах, продающихся в магазине Ha3BaHue которого введено с клавиатуры : "<<endl;
		while (true)

		{
			cout << endl;

			cout << " Введите название магазина или слово ""\"end\" для завершения: ";
			cin.getline(magazin_name, k);

			cout << endl;

			if (strcmp(magazin_name, "end") == 0)break;

			not_found = true;

			for (i = 0; i < n; i++) //Mouck

			{ //BBEQeHHOFO Ha3BaHUA Mara3iHa
				if (strcmp(price[i].magazin, magazin_name) == 0) //B CTpykKType
				{

					cout << " Название товара: " << price[i].goods << endl; //BbiBOA
					cout << " Цена товара: " << price[i].cost << endl;  //3anpoweHHon
					not_found = false; //Mndopmaunu

				}
			} //ecnv HeT Tako UHPOpMalNN BbIBOAUTCA COO6LEHUe
			if (not_found)cout << " Такого товара нет!" << endl << endl;
		}
	//getch();
	return 0;
}

int compare(const void* price1, const void* price2) //pyHkKUMA AA COPTUPOBKU
{
	return strcmp((reinterpret_cast<const PRICE*>(price1))->magazin,
		(reinterpret_cast<const PRICE*>(price2))->magazin);
}

